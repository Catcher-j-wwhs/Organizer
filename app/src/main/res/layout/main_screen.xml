<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_bar_item_active_indicator_view"
        android:layout_width="150dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="search"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/add_storageunit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="add storage unit " />

        <Button
            android:id="@+id/add_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:text="add part" />
        <Button
            android:id="@+id/add_blueprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="150dp"
            android:text="add blueprint" />
    </com.google.android.material.navigation.NavigationView>

    <ListView
        android:id="@+id/BlueprintList"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        >
    </ListView>


</RelativeLayout>
